# ===========================================
# PROFESSIONAL GIT CONFIGURATION
# ===========================================

[user]
    name = daghlar
    email = daghlar@example.com

[core]
    editor = nvim
    pager = less -R
    autocrlf = input
    whitespace = trailing-space,space-before-tab
    precomposeunicode = true
    quotepath = false

[init]
    defaultBranch = main

[push]
    default = simple
    autoSetupRemote = true

[pull]
    rebase = false

[merge]
    tool = vimdiff
    conflictstyle = diff3

[color]
    ui = auto
    branch = auto
    diff = auto
    status = auto
    log = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[alias]
    st = status
    co = checkout
    br = branch
    ci = commit
    unstage = reset HEAD --
    last = log -1 HEAD
    visual = !gitk
    lg = log --oneline --decorate --graph --all
    amend = commit --amend
    uncommit = reset --soft HEAD~1
    changes = diff --name-only
    staged = diff --cached --name-only
    branches = branch -a
    remotes = remote -v
    cleanup = "!git branch --merged | grep -v '\\*\\|main\\|develop' | xargs -n 1 git branch -d"
    aliases = config --get-regexp alias

[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true

[credential]
    helper = store

[url "https://github.com/"]
    insteadOf = git@github.com:

[url "https://"]
    insteadOf = git://
